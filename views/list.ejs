<%- include('header'); %>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItem.forEach(listItem => { %>
  <div class="item">
    <input type="checkbox" />
    <p class="item"><%= listItem %></p>
  </div>
  <% }); %>
  <form action="/" method="post">
    <input
      type="text"
      name="newList"
      placeholder="Today Lists"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer'); %>
